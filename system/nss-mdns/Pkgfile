# Depends on: 

description="glibc plugin providing host name resolution via mDNS"
url="http://0pointer.de/lennart/projects/nss-mdns/"
contributors="Remy"
packager="tnut <tnut@nutyx.org>"
 
name=nss-mdns
version=0.10
release=2

source=(http://0pointer.de/lennart/projects/nss-mdns/nss-mdns-0.10.tar.gz)

build() {

cd $name-$version

./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --localstatedir=/var \
    --disable-lynx

  make
  make DESTDIR=$PKG install
}
