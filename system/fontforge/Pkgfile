# Depends on: m4 shared-mime-info freetype libxml2 cairo gtk2 pango desktop-file-utils shared-mime-info fontsproto giflib libjpeg-turbo libpng libtiff  

description="Outline and bitmap font editor"
url="http://fontforge.sourceforge.net"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=fontforge
version=20170731
release=2
run=(shared-mime-info)

source=(https://github.com/$name/$name/releases/download/$version/$name-dist-$version.tar.xz)

build() {
    cd $name*
    ./configure --prefix=/usr \
            --enable-gtk2-use \
            --disable-static  \
            --docdir=/usr/share/doc/$name-$version
    make
    make DESTDIR=$PKG install
}
