# Depends on: qtbase qtdeclarative gstreamer-plugins-base gstreamer-plugins-bad pulseaudio openal 

description="A cross-platform application and UI framework, QtSerialPort files"
url="http://qt-project.org/"
packager="tnut <tnut@nutyx.org>"
contributors="Pierre B"

name=qtmultimedia
version=5.10.1

_name="${name}-everywhere-src"

source=(https://download.qt.io/official_releases/qt/5.10/$version/submodules/${_name}-${version}.tar.xz)

build() {
cd ${_name}-${version}
qmake
make
make INSTALL_ROOT=$PKG install

# Drop QMAKE_PRL_BUILD_DIR because reference the build dir
  find "$PKG/usr/lib" -type f -name '*.prl' \
       -exec sed -i -e '/^QMAKE_PRL_BUILD_DIR/d' {} \;
}
